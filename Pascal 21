<script>
/* ========= APP DATA & UI BUILD ========= */
const days = ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"];
const grid = document.getElementById('grid');

function dayBoxHtml(day){
  return `
    <div class="day-box ${day==='Sunday' ? 'full-row' : ''}" data-day="${day}">
      <div class="day-title">${day}</div>

      <label class="small" for="${day}-time">Time</label>
      <input type="time" id="${day}-time" />

      <label class="small" for="${day}-text">Note</label>
      <textarea id="${day}-text" placeholder="Write plans..."></textarea>

      <div class="row">
        <div style="flex:1">
          <label class="small" for="${day}-repeat">Repeat</label>
          <select id="${day}-repeat">
            <option value="none">None (one-time)</option>
            <option value="weekly">Repeat weekly</option>
          </select>
        </div>
        <div style="width:130px">
          <label class="small" for="${day}-enabled">Enable alarm</label>
          <select id="${day}-enabled">
            <option value="1">On</option>
            <option value="0">Off</option>
          </select>
        </div>
      </div>

      <div class="entry-controls" style="margin-top:6px">
        <button class="small-btn" data-action="snooze" data-day="${day}">Snooze 5m</button>
        <button class="small-btn" data-action="clear" data-day="${day}">Clear</button>
        <button class="small-btn" data-action="save" data-day="${day}">Save</button>
      </div>

      <div style="margin-top:8px;font-size:13px;color:var(--muted)">
        Last triggered: <span id="${day}-last">never</span>
      </div>
    </div>
  `;
}

grid.innerHTML = days.map(d => dayBoxHtml(d)).join('');

/* ========= STORAGE & VARIABLES ========= */
const STORAGE_PREFIX = 'timetable_v2_';

function saveDay(day){
  const time = document.getElementById(`${day}-time`).value || "";
  const text = document.getElementById(`${day}-text`).value || "";
  const repeat = document.getElementById(`${day}-repeat`).value || "none";
  const enabled = document.getElementById(`${day}-enabled`).value || "1";

  const obj = { time, text, repeat, enabled };
  localStorage.setItem(STORAGE_PREFIX + day, JSON.stringify(obj));
}

function loadDay(day){
  const raw = localStorage.getItem(STORAGE_PREFIX + day);
  if(!raw) return;
  try{
    const obj = JSON.parse(raw);
    document.getElementById(`${day}-time`).value = obj.time || "";
    document.getElementById(`${day}-text`).value = obj.text || "";
    document.getElementById(`${day}-repeat`).value = obj.repeat || "none";
    document.getElementById(`${day}-enabled`).value = obj.enabled || "1";
  }catch(e){}
}

function saveAll(){ days.forEach(saveDay); }
function loadAll(){
  days.forEach(loadDay);
  days.forEach(day=>{
    const t = localStorage.getItem(`${STORAGE_PREFIX}last_${day}`) || 'never';
    const el = document.getElementById(`${day}-last`);
    if(el) el.textContent = t;
  });
}

/* ========= NOTIFICATIONS & PERMISSIONS ========= */
const notifStatusEl = document.getElementById('notif-status');
function updateNotifStatus(){
  notifStatusEl.textContent = (typeof Notification === 'undefined') ? 'unsupported' : Notification.permission;
}
updateNotifStatus();
if(typeof Notification !== 'undefined' && Notification.permission !== 'granted') {
  Notification.requestPermission().then(updateNotifStatus).catch(()=>{});
}

/* try registering a service worker (optional) */
if('serviceWorker' in navigator){
  navigator.serviceWorker.register('sw.js').then(reg=>{
    // console.log('SW registered', reg);
  }).catch(()=>{
    // silent fail if no sw.js present
  });
}

/* ========= ALARMS: sounds, check loop, cooldown, snooze ========= */
const SOUND_URLS = {
  default: "https://actions.google.com/sounds/v1/alarms/beep_short.ogg",
  tone1: "https://actions.google.com/sounds/v1/alarms/digital_watch_alarm_long.ogg",
  tone2: "https://actions.google.com/sounds/v1/alarms/alarm_clock.ogg",
};
let customSoundUrl = null;
const soundChoice = document.getElementById('sound-choice');
const soundUpload = document.getElementById('sound-upload');
const testSoundBtn = document.getElementById('test-sound');
let currentAudio = new Audio(SOUND_URLS.default);

soundChoice.addEventListener('change', (e)=>{
  if(e.target.value === 'custom'){
    soundUpload.click();
  } else {
    const url = SOUND_URLS[e.target.value] || SOUND_URLS.default;
    currentAudio = new Audio(url);
    try{ localStorage.setItem(`${STORAGE_PREFIX}sound_choice`, e.target.value); }catch(e){}
  }
});

soundUpload.addEventListener('change', (ev)=>{
  const file = ev.target.files && ev.target.files[0];
  if(!file) return;
  const url = URL.createObjectURL(file);
  customSoundUrl = url;
  currentAudio = new Audio(url);
  try{ localStorage.setItem(`${STORAGE_PREFIX}sound_choice`, 'custom'); }catch(e){}
});

testSoundBtn.addEventListener('click', ()=>{ currentAudio.play().catch(()=>{}); });

/* throttling: avoid triggering repeatedly for same alarm within 60s */
function recentlyTriggeredKey(day,time){ return `${STORAGE_PREFIX}lastTriggered_${day}_${time}`; }
function wasRecentlyTriggered(day,time){
  const v = localStorage.getItem(recentlyTriggeredKey(day,time));
  if(!v) return false;
  const ts = parseInt(v,10);
  return (Date.now() - ts) < (60 * 1000);
}
function markTriggeredNow(day,time){
  try{ localStorage.setItem(recentlyTriggeredKey(day,time), Date.now().toString()); }catch(e){}
  try{ localStorage.setItem(`${STORAGE_PREFIX}last_${day}`, new Date().toLocaleString()); }catch(e){}
  const el = document.getElementById(`${day}-last`);
  if(el) el.textContent = new Date().toLocaleString();
}

async function showReminderNotification(day, text, timeStr){
  const title = `Reminder â€” ${day} ${timeStr}`;
  const body = text || "(no note)";
  const options = {
    body,
    icon: "icons/icon-192.png",
    badge: "icons/icon-192.png",
    data: { day, timeStr },
    actions: [
      { action: 'snooze', title: 'Snooze 5m' },
      { action: 'dismiss', title: 'Dismiss' }
    ]
  };

  if('serviceWorker' in navigator && navigator.serviceWorker.controller){
    navigator.serviceWorker.controller.postMessage({type:'showNotification', payload:{title, options}});
  } else if(typeof Notification !== 'undefined'){
    try{ new Notification(title, options); }catch(e){}
  }
}

function playAlarmSound(){ currentAudio.play().catch(()=>{}); }

/* ========= ALARM CHECK LOOP ========= */
function getTodayLabel(){
  const labels = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday'];
  return labels[new Date().getDay()];
}

function checkAlarms(){
  const now = new Date();
  const hhmm = now.toTimeString().slice(0,5); // "HH:MM"
  const today = getTodayLabel();

  days.forEach(day=>{
    // only consider entries that belong to today (so Monday alarms fire on Monday)
    if(day !== today) return;

    const raw = localStorage.getItem(STORAGE_PREFIX + day);
    if(!raw) return;
    try{
      const { time, text, repeat, enabled } = JSON.parse(raw);
      if(!time || enabled === "0") return;

      if(time === hhmm){
        if(wasRecentlyTriggered(day,time)) return;
        showReminderNotification(day, text, time);
        playAlarmSound();
        markTriggeredNow(day,time);

        if(repeat === 'none'){
          const obj = { time: "", text, repeat, enabled: "0" };
          localStorage.setItem(STORAGE_PREFIX + day, JSON.stringify(obj));
          const timeInput = document.getElementById(`${day}-time`);
          const enabledSelect = document.getElementById(`${day}-enabled`);
          if(timeInput) timeInput.value = "";
          if(enabledSelect) enabledSelect.value = "0";
        }
      }
    }catch(e){}
  });
}

setInterval(checkAlarms, 10000);
setTimeout(checkAlarms, 2000);

/* ========= SNOOZE HANDLING ========= */
function scheduleSnooze(day, minutes){
  const now = new Date();
  now.setMinutes(now.getMinutes() + minutes);
  const hh = String(now.getHours()).padStart(2,'0');
  const mm = String(now.getMinutes()).padStart(2,'0');
  const timeStr = `${hh}:${mm}`;
  const snoozeKey = `${STORAGE_PREFIX}snooze_${day}_${timeStr}`;
  try{ localStorage.setItem(snoozeKey, JSON.stringify({ time: timeStr, text: document.getElementById(`${day}-text`).value || '', created: Date.now() })); }catch(e){}
  // immediate feedback
  showReminderNotification(day, `(snooze) ${document.getElementById(`${day}-text`).value || ''}`, timeStr);
  playAlarmSound();
}

function checkSnoozes(){
  const now = new Date();
  const hhmm = now.toTimeString().slice(0,5);
  const keys = [];
  for(let i=0;i<localStorage.length;i++){
    const k = localStorage.key(i);
    if(k && k.startsWith(`${STORAGE_PREFIX}snooze_`)) keys.push(k);
  }

  keys.forEach(k=>{
    try{
      const raw = localStorage.getItem(k);
      if(!raw) return;
      const obj = JSON.parse(raw);
      if(obj && obj.time === hhmm){
        const rest = k.slice((STORAGE_PREFIX + 'snooze_').length); // "{day}_{HH:MM}"
        const idx = rest.indexOf('_');
        if(idx === -1) return;
        const day = rest.slice(0, idx);
        const timeStr = rest.slice(idx+1);
        if(!wasRecentlyTriggered(day,timeStr)){
          showReminderNotification(day, obj.text, timeStr);
          playAlarmSound();
          markTriggeredNow(day,timeStr);
          localStorage.removeItem(k);
        }
      }
    }catch(e){}
  });
}
setInterval(checkSnoozes, 10000);

/* ========= UI BUTTONS: snooze, clear, save etc ========= */
function attachEntryControls(){
  document.querySelectorAll('.entry-controls button').forEach(btn=>{
    btn.addEventListener('click', (ev)=>{
      const action = btn.dataset.action;
      const day = btn.dataset.day;
      if(action === 'save') saveDay(day);
      if(action === 'clear'){
        const timeInput = document.getElementById(`${day}-time`);
        const textInput = document.getElementById(`${day}-text`);
        const enabledSelect = document.getElementById(`${day}-enabled`);
        if(timeInput) timeInput.value = "";
        if(textInput) textInput.value = "";
        if(enabledSelect) enabledSelect.value = "0";
        saveDay(day);
      }
      if(action === 'snooze') scheduleSnooze(day, 5);
    });
  });
}
attachEntryControls();

/* auto-save on inputs */
document.addEventListener('input', (ev)=>{
  const id = ev.target.id;
  if(!id) return;
  const day = id.split('-')[0];
  if(days.includes(day)) saveDay(day);
});

/* ========= EXPORT / IMPORT / SHARE ========= */
document.getElementById('export-btn').addEventListener('click', ()=>{
  const data = {};
  days.forEach(d=>{
    const raw = localStorage.getItem(STORAGE_PREFIX + d);
    data[d] = raw ? JSON.parse(raw) : null;
  });
  const blob = new Blob([JSON.stringify({data, soundChoice: localStorage.getItem(`${STORAGE_PREFIX}sound_choice`)}, null, 2)], {type:'application/json'});
  const url = URL.createObjectURL(blob);
  const a = document.createElement('a');
  a.href = url; a.download = 'timetable-export.json';
  document.body.appendChild(a);
  a.click();
  a.remove();
  URL.revokeObjectURL(url);
});

document.getElementById('import-btn').addEventListener('click', ()=>{
  const input = document.createElement('input');
  input.type = 'file';
  input.accept = 'application/json';
  input.onchange = (ev)=>{
    const f = ev.target.files[0];
    const reader = new FileReader();
    reader.onload = (e)=>{
      try{
        const obj = JSON.parse(e.target.result);
        if(obj && obj.data){
          Object.keys(obj.data).forEach(d=>{
            if(obj.data[d]) localStorage.setItem(STORAGE_PREFIX + d, JSON.stringify(obj.data[d]));
          });
          if(obj.soundChoice) localStorage.setItem(`${STORAGE_PREFIX}sound_choice`, obj.soundChoice);
          loadAll();
          alert('Import complete');
        } else alert('Invalid file');
      }catch(err){ alert('Failed to import: ' + err.message) }
    };
    reader.readAsText(f);
  };
  input.click();
});

document.getElementById('share-btn').addEventListener('click', async ()=>{
  let text = "My timetable:\n";
  days.forEach(d=>{
    const raw = localStorage.getItem(STORAGE_PREFIX + d);
    if(raw){
      try{ const o = JSON.parse(raw); if(o.time) text += `${d} ${o.time} â€” ${o.text || ''}\n`; }catch(e){}
    }
  });
  if(navigator.share){
    try{ await navigator.share({title:'My Timetable', text}); } catch(e){}
  } else {
    try{ await navigator.clipboard.writeText(text); alert('Copied to clipboard'); }catch(e){ alert('Share not supported'); }
  }
});

/* ========= SOUND CHOICE & LOAD ========= */
loadAll();
const savedSoundChoice = localStorage.getItem(`${STORAGE_PREFIX}sound_choice`) || 'default';
if(savedSoundChoice){
  soundChoice.value = savedSoundChoice;
  if(savedSoundChoice === 'custom'){
    // user must re-upload the custom file after reload
  } else {
    currentAudio = new Audio(SOUND_URLS[savedSoundChoice] || SOUND_URLS.default);
  }
}

/* ========= SERVICE WORKER MESSAGE HANDLER ========= */
if(navigator.serviceWorker) navigator.serviceWorker.addEventListener('message', (ev)=>{
  const m = ev.data;
  if(m && m.type === 'snoozeRequest' && m.day) scheduleSnooze(m.day, 5);
});

/* ========= Dark mode toggle ========= */
const toggle = document.getElementById('toggle-dark');
toggle.addEventListener('click', ()=>{ document.body.classList.toggle('dark'); });

</script>

</body>
