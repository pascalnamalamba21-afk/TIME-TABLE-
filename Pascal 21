/* sw.js - Service Worker (notifications + basic message handler) */

self.addEventListener('install', (e) => {
  // Activate worker immediately
  self.skipWaiting();
});

self.addEventListener('activate', (e) => {
  // Claim clients so the SW controls all pages immediately
  self.clients.claim();
});

self.addEventListener('notificationclick', (event) => {
  // Handle action buttons (e.g., snooze)
  if (event.action === 'snooze') {
    event.waitUntil(
      clients.matchAll({ includeUncontrolled: true, type: 'window' }).then(clientsArr => {
        if (clientsArr && clientsArr.length > 0) {
          // Send message to first client to schedule snooze
          clientsArr[0].postMessage({ type: 'snoozeRequest', day: event.notification.data?.day });
        }
      })
    );
  }

  // Always close the notification on click
  event.notification.close();
});

self.addEventListener('message', (ev) => {
  // Receive message from page and show notification via SW (safer on some browsers)
  if (ev.data && ev.data.type === 'showNotification') {
    const { title, options } = ev.data.payload || {};
    if (title && options) {
      self.registration.showNotification(title, options).catch(()=>{});
    }
  }
});
